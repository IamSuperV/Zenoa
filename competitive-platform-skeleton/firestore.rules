rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read/write their own stats
    match /stats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can create responses where userId matches their own ID
    match /responses/{responseId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Leaderboard queries require reading stats of others, 
    // but for strict privacy, we might use a dedicated 'public profiles' collection.
    // For this app, we'll allow authenticated users to read stats for the leaderboard.
    match /stats/{userId} {
       allow read: if request.auth != null;
    }
  }
}
