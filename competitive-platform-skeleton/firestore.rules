rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read/write their own stats AND read others for leaderboard
    match /stats/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can create responses where userId matches their own ID
    match /responses/{responseId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Rooms: Authenticated users can create, read, and update (join) rooms
    match /rooms/{roomId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null; 
      allow update: if request.auth != null; // In real app, create stricter rules (e.g. only add self to players array)
    }
  }
}
